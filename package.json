{
  "name": "graphql-relay-subscription",
  "version": "0.2.1",
  "description": "Relay subscription helpers for GraphQL.js",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rm -rf lib/* && babel src --extensions \".ts,.tsx\" --ignore *.spec.js --out-dir lib --copy-files --source-maps --verbose",
    "lint": "eslint src test",
    "prepublish": "npm run build",
    "tdd": "jest --watch",
    "test": "npm run lint && npm run testonly -- --coverage",
    "testonly": "jest --runInBand --verbose",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "setupFiles": [
      "@babel/polyfill"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taion/graphql-relay-subscription.git"
  },
  "keywords": [
    "graphql",
    "relay",
    "subscriptions"
  ],
  "author": "Jimmy Jia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/taion/graphql-relay-subscription/issues"
  },
  "homepage": "https://github.com/taion/graphql-relay-subscription#readme",
  "peerDependencies": {
    "graphql": ">=0.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-jest": "^26.0.1",
    "codecov": "^3.7.0",
    "eslint": "^7.2.0",
    "eslint-config-4catalyzer": "^1.1.2",
    "eslint-config-4catalyzer-jest": "^2.0.7",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.16.0",
    "eslint-plugin-prettier": "^3.1.4",
    "graphql": "^15.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  }
}
