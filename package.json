  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "yarn 4c lint --fix --prettier-ignore .eslintignore"
  },
  "prettier": "@4c/prettier-config",
  "jest": {
    "preset": "@4c/jest-preset"
  },
  "devDependencies": {
    "@4c/babel-preset": "^7.3.6",
    "@4c/cli": "^2.1.11",
    "@4c/jest-preset": "^1.5.1",
    "@4c/prettier-config": "^1.1.0",
    "@4c/tsconfig": "^0.3.1",
    "@babel/core": "^7.11.1",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "babel-jest": "^26.3.0",
    "codecov": "^3.7.2",
    "eslint-config-4catalyzer": "^1.1.2",
    "eslint-config-4catalyzer-jest": "^2.0.7",
    "eslint-config-4catalyzer-typescript": "^2.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "graphql": "^15.3.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "graphql": ">=0.10.0"
  }
